<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="ChartControl.Pages.PieChartPage"  
     xmlns:charting="clr-namespace:ChartControl.Controls;assembly=ChartControl">
    <StackLayout x:Name="PageLayout">

        <charting:Chart x:Name="PieChart"
                        HeightRequest="500"
                        WidthRequest="300">

            <charting:Chart.Series>
                <charting:Series Type="Pie">

                    <charting:Series.Points>
                        <charting:DataPoint Label="Jan"
                                            Color="Blue"
                                            Value="25" />
                        <charting:DataPoint Label="Feb"
                                            Color="Green"
                                            Value="40" />
                        <charting:DataPoint Label="March"
                                            Color="Yellow"
                                            Value="45" />
                    </charting:Series.Points>

                </charting:Series>
            </charting:Chart.Series>

        </charting:Chart>

    </StackLayout>
</ContentPage>